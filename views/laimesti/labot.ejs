<% layout('layouts/boilerplate') %> 

   
    <div class="row">
        <h1 class="text-center">Labot laimestu</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/laimesti/<%= winning._id %>?_method=PUT" method="POST" novalidate class="validated-form" 
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Nosaukums</label>
                    <input class="form-control" type="text" id="title" name="winning[title]" value="<%= winning.title %> "required >
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Apraksts</label>
                    <textarea class="form-control" type="text" id="description" name="winning[description]" required><%= winning.description %> </textarea>
                </div>
                <div class="mb-3">
                    <label for="">Pievienot vairāk bildes</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                  </div>
                <div class="mb-3">
                    <%winning.image.forEach(function(img,i){%> 
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Izdzēst?</label>
                  <%})%> 
               
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Atjaunināt laimestu</button>
                </div>
            </form>
            <a href="/laimesti/<%= winning._id %> ">Atpakaļ uz laimestu</a>
        </div>
    </div>