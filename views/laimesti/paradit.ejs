<% layout('layouts/boilerplate') %>
  <link rel="stylesheet" href="/stylesheets/stars.css">


  <div class="row">
    <div class="col-6">
      <div id="winningCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% winning.image.forEach((img, i)=>{ %>
            <div class="carousel-item <%= i === 0? 'active' : '' %> ">
              <img src="<%= img.url %>" class="d-block w-100" alt="">
            </div>
            <% }) %>

        </div>
        <% if(winning.image.length> 1) { %>
          <button class="carousel-control-prev" type="button" data-bs-target="#winningCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Iepriekšējā</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#winningCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Nākošā</span>
          </button>
          <% } %>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">
            <%= winning.title %>
          </h5>
          <p class="card-text">
            <%= winning.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Iesniedza <%= winning.author.username %>
          </li>
        </ul>
        <% if(currentUser && winning.author.equals(currentUser._id)) { %>
          <div class="card-body">
            <a class="card-link btn btn-info" href="/laimesti/<%= winning._id %>/labot">Labot</a>
            <form class="d-inline" action="/laimesti/<%= winning._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger">Dzēst</button>
            </form>
          </div>
          <% } %>
            <div class="card-footer text-muted">
              2 days ago
            </div>
      </div>
    </div>

    
      <% if(currentUser) { %>
        <h2>Atstāj atsauksmi</h2>
        <form action="/laimesti/<%= winning._id %>/atsauksmes/" method="POST" class="mb-3 validated-form" novalidate>
          <!-- <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div> -->
          <div class="mb-3">
            <fieldset class="starability-basic">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 zvaigzne</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 zvaigznes</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 zvaigznes</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 zvaigznes</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 zvaigznes</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label class="form-label" for="body">Atsauksmes teksts</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <button class="btn btn-success">Iesniegt</button>
        </form>
        <% } %>
          <% for(let review of winning.reviews) { %>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title">
                  <%= review.author.username %>
                </h5>
                <p class="starability-result" data-rating="<%= review.rating %>">
                  Novērtēts: <%= review.rating %> zvaigznes
                </p>
                <!-- <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username %> </h6> -->
                <p class="card-text">Vērtējums: <%= review.body %>
                </p>
                <% if(currentUser && review.author.equals(currentUser._id)) { %>
                  <form action="/laimesti/<%= winning._id %>/reviews/<%= review._id %>?_method=DELETE"
                    method="POST">
                    <button class="btn btn-sm btn-danger">Izdzēst</button>
                  </form>
                  <% } %>
              </div>
            </div>
            <% } %>
    </div>
  </div>




  <footer>

    <a href="/laimesti">Visi laimesti</a>
  </footer>



